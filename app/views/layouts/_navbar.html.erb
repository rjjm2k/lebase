        <% if user_be_admin? %>
        <%= link_to "Lé-Base", posts_path, id: "logo" %>
        <% end %>
        <% else %>
        <%= link_to "Lé-Base", root_path, id: "logo" %>
      <% end %>
      
        <nav class="nav- pull-right">
          <ul class="nav">
      <% if signed_in? %>
        <% if user_be_admin? %>
              <li><%= link_to "HOME", posts_path %></li>
